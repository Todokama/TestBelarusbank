<Page x:Class="BankTest.View.NewProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankTest.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewProduct">
    
    
    <Grid Background="White">
        <Button Height="20" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,20" Content="Назад" Click="BtnBack_Click" Grid.RowSpan="2"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width=" 200">
            <TextBlock Text="Название товара"/>
            <TextBox Name="TxbName"/>
            <TextBlock Text="Категория"/>
            <ComboBox x:Name="CmbCategory" DisplayMemberPath="Title"/>
            <TextBlock Text="Описание"/>
            <TextBox Name="TxbDescription"/>
            <TextBlock Text="Цена"/>
            <TextBox Name="TxbPrice" />
            <TextBlock Text="Общее примечание"/>
            <TextBox Name="TxbGeneralNote"/>
            <TextBlock Text="Специальное примечание"/>
            <TextBox Name="TxbSpecialNote"/>


            <Button Height="20" Margin="5" Click="SaveBtn_Click" Content="Добавить"></Button>
        </StackPanel>
    </Grid>
</Page>

