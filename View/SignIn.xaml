<Page x:Class="BankTest.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankTest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignIn">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width=" 200">
            <TextBlock Text="Логин"/>
            <TextBox Name="TxbLogin"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox Name="TxbPassword"/>

            <Button Height="20" Margin="5" Click="BtnSignIn_Click" Content="Войти"></Button>
            <Button Height="20" Margin="5" Click="BtnSignUp_Click" Content="Зарегестрироваться"></Button>
        </StackPanel>
    </Grid>
</Page>

